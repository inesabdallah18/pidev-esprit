<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #3d76b7;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.AfficherUser">
   <children>
      <!-- Panneau latéral gauche -->
      <AnchorPane prefHeight="400.0" prefWidth="150.0" style="-fx-background-color: #87CEEB;">
         <children>
            <!-- Logo ou image représentative -->
            <ImageView fitHeight="319.0" fitWidth="120.0" layoutX="15.0" layoutY="5.0">
               <image>
                  <Image url="@images/téléchargement.jpg" />
               </image>
            </ImageView>

            <!-- Titre -->
            <Label contentDisplay="TOP" layoutX="15.0" layoutY="120.0" prefHeight="58.0" prefWidth="138.0" text="ESPACE " textAlignment="CENTER" textFill="#230b02">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
            </Label>

            <!-- Bouton d'affichage des utilisateurs -->
            <Button layoutX="15.0" layoutY="330.0" mnemonicParsing="false" onAction="#AfficherUser" prefHeight="26.0" prefWidth="120.0" style="-fx-background-color: #3d76b7; -fx-text-fill: #FFFFFF;" text="Afficher Utilisateurs" />
            <Label contentDisplay="TOP" layoutX="15.0" layoutY="149.0" prefHeight="58.0" prefWidth="138.0" text="UTILISATEUR" textAlignment="CENTER" textFill="#0d0401">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>

      <!-- Contenu principal -->
      <AnchorPane layoutX="150.0" layoutY="0.0" prefHeight="400.0" prefWidth="450.0">
         <children>
            <!-- Zone d'affichage des utilisateurs -->
            <Label fx:id="affichage" layoutX="50.0" layoutY="74.0" prefHeight="200.0" prefWidth="350.0" style="-fx-background-color: #FFFFFF; -fx-text-fill: #3d76b7; -fx-font-size: 14px;" />

            <!-- Images représentatives -->
            <AnchorPane layoutX="50.0" layoutY="320.0" prefHeight="80.0" prefWidth="350.0">
               <children>
                  <ImageView fitHeight="80.0" fitWidth="70.0" layoutX="0.0" layoutY="0.0">
                     <image>
                        <Image url="@images/téléchargement.jpg" />
                     </image>
                  </ImageView>
                  <ImageView fitHeight="80.0" fitWidth="70.0" layoutX="80.0" layoutY="0.0">
                     <image>
                        <Image url="@images/téléchargement.jpg" />
                     </image>
                  </ImageView>
                  <ImageView fitHeight="80.0" fitWidth="70.0" layoutX="160.0" layoutY="0.0">
                     <image>
                        <Image url="@images/téléchargement.jpg" />
                     </image>
                  </ImageView>
                  <ImageView fitHeight="80.0" fitWidth="70.0" layoutX="240.0" layoutY="0.0">
                     <image>
                        <Image url="@images/téléchargement.jpg" />
                     </image>
                  </ImageView>
               </children>
            </AnchorPane>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
